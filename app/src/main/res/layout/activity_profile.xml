<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Profilbild -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/circle_background"
            android:contentDescription="Profilbild"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_placeholder" />

        <ProgressBar
            android:id="@+id/uploadProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Benutzername -->
        <TextView
            android:id="@+id/usernameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Benutzername"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Button: Bild ändern -->
        <Button
            android:id="@+id/uploadImageBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#00BCD4"
            android:clickable="true"
            android:focusable="true"
            android:text="Profilbild hochladen" />

        <Button
            android:id="@+id/deleteImageBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FF5252"
            android:text="Profilbild löschen"
            android:textColor="#FFFFFF" />

        <!-- Nutzer-Email -->
        <TextView
            android:id="@+id/emailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Email: user@example.com"
            android:textColor="#333333"
            android:textSize="16sp" />

        <!-- Likes-Zähler -->
        <TextView
            android:id="@+id/likesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Anzahl geliketer Locations: 0"
            android:textColor="#333333"
            android:textSize="16sp" />

        <!-- Aktuelles Passwort -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/currentPasswordInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Aktuelles Passwort"
                android:inputType="textPassword"
                android:padding="10dp" />

            <ImageView
                android:id="@+id/toggleCurrentPasswordVisibility"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:contentDescription="Passwort anzeigen"
                android:src="@drawable/ic_eye" />
        </LinearLayout>

        <!-- Neues Passwort -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/newPasswordInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Neues Passwort"
                android:inputType="textPassword"
                android:padding="10dp" />

            <ImageView
                android:id="@+id/toggleNewPasswordVisibility"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:contentDescription="Passwort anzeigen"
                android:src="@drawable/ic_eye" />
        </LinearLayout>

        <!-- Passwort wiederholen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/confirmPasswordInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Passwort wiederholen"
                android:inputType="textPassword"
                android:padding="10dp" />

            <ImageView
                android:id="@+id/toggleConfirmPasswordVisibility"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:contentDescription="Passwort anzeigen"
                android:src="@drawable/ic_eye" />
        </LinearLayout>


        <Button
            android:id="@+id/savePasswordBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00BCD4"
            android:text="Passwort speichern" />

        <Button
            android:id="@+id/deleteAccountBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account löschen"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F44336"
            android:layout_marginTop="4dp" />

        <EditText
            android:id="@+id/deletePasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Passwort zur Bestätigung"
            android:inputType="textPassword"
            android:visibility="gone"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/confirmDeleteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Löschen bestätigen"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
